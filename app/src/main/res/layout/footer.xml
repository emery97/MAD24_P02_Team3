<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#4b0082">

    <ImageButton
        android:id="@+id/footerHomeIcon"
        android:layout_width="57dp"
        android:layout_height="61dp"
        android:layout_marginEnd="52dp"
        android:background="#4B0081"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerSearchIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_icon"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/footerSearchIcon"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerBookingIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/search_icon"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/footerBookingIcon"
        android:layout_width="43dp"
        android:layout_height="59dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerAccountIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/booking_icon"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/footerAccountIcon"
        android:layout_width="53dp"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_setting_icon"
        app:tint="#F8F5F5" />

</androidx.constraintlayout.widget.ConstraintLayout>
