<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4b0082">

    <ImageButton
        android:id="@+id/footerHomeIcon"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="41dp"
        android:background="#4B0081"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerSearchIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/home_icon"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/footerSearchIcon"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="#4B0081"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerBookingIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/search_icon"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/footerBookingIcon"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#4B0081"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/footerAccountIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/booking_icon"
        app:tint="#FAFAFA" />

    <ImageButton
        android:id="@+id/footerAccountIcon"
        android:layout_width="59dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4B0081"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_setting_icon"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
