<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4C240A"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/footerHomeIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="#4D2408"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_home_page"
        app:tint="#F4F0E5" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space>

    <ImageButton
        android:id="@+id/footerSearchIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#4C240B"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_explore_page"
        app:tint="#F4F0E5" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space>

    <ImageButton
        android:id="@+id/footerBookingIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#4C240A"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_booking_history"
        app:tint="#F4F0E5" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></Space>

    <ImageButton
        android:id="@+id/footerAccountIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#4C240A"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_profile_page"
        app:tint="#F4F0E5" />

</LinearLayout>
