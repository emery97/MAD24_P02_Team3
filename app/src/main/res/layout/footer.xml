<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4b0082"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/footerHomeIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="#4B0081"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp"
        app:srcCompat="@drawable/home_icon"
        app:tint="#FFFFFF" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>

    <ImageButton
        android:id="@+id/footerSearchIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#4B0081"
        app:srcCompat="@drawable/search_icon"
        app:tint="#FFFFFF" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>

    <ImageButton
        android:id="@+id/footerBookingIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#4B0081"
        app:srcCompat="@drawable/booking_icon"
        app:tint="#FAFAFA" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>

    <ImageButton
        android:id="@+id/footerAccountIcon"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#4B0081"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp"
        app:srcCompat="@drawable/account_setting_icon"
        app:tint="#FFFFFF" />

</LinearLayout>
