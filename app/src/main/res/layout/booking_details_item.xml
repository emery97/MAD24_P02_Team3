<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="38dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Date -->
        <TextView
            android:id="@+id/EventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="EventTitle"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Datebought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Expandable section -->
        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Additional details -->
            <TextView
                android:id="@+id/seatCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:text="Seat Category"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/seatNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Seat Number"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--CONCERT DATE TIME-->
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Seat Number"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:text="Payment Method"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/detailsbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/black"
                android:padding="0dp"
                android:text="More"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/viewMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:onClick="toggleExpandableSection"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
</androidx.cardview.widget.CardView>