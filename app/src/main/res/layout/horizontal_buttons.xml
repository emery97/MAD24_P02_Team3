<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <Button
                android:id="@+id/filterMusic"
                android:layout_width="254dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FDFDFD"
                android:drawableTop="@drawable/filter_music_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minWidth="0dp"
                android:padding="4dp"
                android:paddingStart="240dp" />

            <Button
                android:id="@+id/filterSports"
                android:layout_width="268dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FDFDFD"
                android:drawableTop="@drawable/filter_sports_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="240dp" />

            <Button
                android:id="@+id/filterDance"
                android:layout_width="254dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FDFDFD"
                android:drawableTop="@drawable/filter_dance_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="240dp" />

            <Button
                android:id="@+id/filterFamily"
                android:layout_width="258dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FDFDFD"
                android:drawableTop="@drawable/filter_family_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="240dp"/>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
