<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/priceRangeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Price Range"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <Spinner
        android:id="@+id/priceRangeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/eventTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Event Type"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <Spinner
        android:id="@+id/eventTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/selectDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#996666"
        android:text="Select Date"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/selectedDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="No date selected"
        android:textColor="#999999" />

    <Button
        android:id="@+id/clearFiltersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#CAA2A2"
        android:text="Clear Filters"
        android:textColor="@android:color/white" />
</LinearLayout>
